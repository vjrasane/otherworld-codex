---
import Base from "../layouts/Base.astro";
import { CardGrid } from "../components/CardGrid.tsx";
import { getAllCampaigns, getAllCards, getAllStandalones } from "../data";
import { routes } from "../routes";

const cards = getAllCards();

const encounterCards = cards.filter(c => !!c.encounterCode)
---

<Base>
  <CardGrid cards={encounterCards} client:only="react" />
</Base>

<style>
  h1 {
    margin-bottom: 1rem;
  }

  h1 + h1,
  .campaigns + h1,
  .standalones + h1 {
    margin-top: 2rem;
  }

  .campaigns,
  .standalones {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.75rem;
  }

  .campaign-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem;
    background: var(--bg-1);
    border-radius: 8px;
    border: 1px solid var(--border);
    color: var(--text-primary);
    transition: border-color 0.15s;
  }

  .campaign-card:hover {
    border-color: var(--accent);
  }

  .campaign-icon {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    filter: invert(73%) sepia(15%) saturate(497%) hue-rotate(169deg) brightness(95%) contrast(88%);
  }

  .campaign-name {
    font-weight: 600;
    font-size: 1.1rem;
  }

  .campaign-meta {
    color: var(--text-muted);
    font-size: 0.85rem;
  }
</style>
