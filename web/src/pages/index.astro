---
import Base from "../layouts/Base.astro";
import { getAllCampaigns } from "../data";

const campaigns = getAllCampaigns();
---

<Base title="Campaigns">
  <h1>Campaigns</h1>
  <div class="campaigns">
    {
      campaigns.map((c) => (
        <a href={`/campaigns/${c.code}`} class="campaign-card">
          {c.imageUrl ? (
            <img src={c.imageUrl} alt="" class="campaign-image" />
          ) : (
            <div class="campaign-placeholder" />
          )}
          <div class="campaign-info">
            <div class="campaign-name">{c.name}</div>
            <div class="campaign-meta">
              {c.scenarios.length} scenario{c.scenarios.length !== 1 && "s"}
            </div>
          </div>
        </a>
      ))
    }
  </div>
</Base>

<style>
  h1 {
    margin-bottom: 1rem;
  }

  .campaigns {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .campaign-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem;
    background: var(--bg-1);
    border-radius: 8px;
    border: 1px solid var(--border);
    color: var(--text-primary);
    transition: border-color 0.15s;
  }

  .campaign-card:hover {
    border-color: var(--accent);
  }

  .campaign-image {
    width: 60px;
    height: 84px;
    object-fit: cover;
    border-radius: 4px;
    flex-shrink: 0;
  }

  .campaign-placeholder {
    width: 60px;
    height: 84px;
    background: var(--bg-3);
    border-radius: 4px;
    flex-shrink: 0;
  }

  .campaign-name {
    font-weight: 600;
    font-size: 1.1rem;
  }

  .campaign-meta {
    color: var(--text-muted);
    font-size: 0.85rem;
  }
</style>
