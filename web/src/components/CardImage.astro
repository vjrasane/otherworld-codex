---
interface Props {
  imageUrl?: string;
  name: string;
  typeCode: string;
  class?: string;
}

const { imageUrl, name, typeCode, class: className } = Astro.props;
const HORIZONTAL_TYPES = new Set(["act", "agenda", "investigator"]);
const isHorizontal = HORIZONTAL_TYPES.has(typeCode);
---

{
  imageUrl ? (
    <div class:list={["card-image", { horizontal: isHorizontal }, className]}>
      <img src={imageUrl} alt={name} />
    </div>
  ) : (
    <div class:list={["card-placeholder", { horizontal: isHorizontal }, className]}>
      <span>{name}</span>
    </div>
  )
}

<style>
  .card-image {
    aspect-ratio: 5 / 7;
    user-select: none;
  }

  .card-image.horizontal {
    aspect-ratio: 7 / 5;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  .card-placeholder {
    aspect-ratio: 5 / 7;
    background: var(--bg-2);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    text-align: center;
    color: var(--text-muted);
  }

  .card-placeholder.horizontal {
    aspect-ratio: 7 / 5;
  }
</style>
